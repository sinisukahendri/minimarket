<?xml version="1.0"?>
<!DOCTYPE page-specification PUBLIC
"-//Apache Software Foundation//Tapestry Specification 4.0//EN"
"http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="workshop.minimarket.ui.tapestry.controller.BarangController">
	<component id="formInputBarang" type="Form">
		<binding name="listener" value="listener:simpanBarang"/>	
	</component>
        
	<component id="namaBarang" type="TextField">
		<binding name="value" value="ognl:namaBarang"/>	
	</component>

        <component id="hargaJual" type="TextField">
		<binding name="value" value="ognl:hargaJual"/>	
	</component>

        <component id="hargaBeli" type="TextField">
		<binding name="value" value="ognl:hargaBeli"/>	
	</component>

        <component id="satuan" type="TextField">
		<binding name="value" value="ognl:satuan"/>	
	</component>

        <component id="stok" type="TextField">
		<binding name="value" value="ognl:stok"/>	
	</component>

        <component id="produkId" type="PropertySelection">
		<binding name="model" value="daftarProduk"/>
		<binding name="value" value="selectedProdukId"/>
	</component>

        <component id="tambahlagi" type="Submit">
		<binding name="value" value="listener:tambahLagi"/>	
	</component>
</page-specification>